---

import Layout from '../../layouts/Layout.astro';
import { getPlanets } from '../api/planetsApi';


let results = await getPlanets();

---
<Layout title="all planets">
    <main class="main" slot="main">
        <h1>
            All Planets
        </h1>
        <ul>
            {
                results.map((planet, index) =>(
                    <li>
                        <a href={`/planets/${index+1}`}>{planet.name}</a> 
                    </li>
                ))
            }
        </ul>
    </main>
    <aside class="aside" slot="aside">
        <ul>
            <li>
                <a href="./lit/lit-basic">
                    lit: basic
                </a>
            </li>
            
        </ul>
    </aside>
</Layout>
<style>
    
    main{
        flex-grow: 1;
    }
    h1{
        text-align: left;
    }
</style>