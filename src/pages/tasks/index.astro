---

import Layout from '../../layouts/Layout.astro';
import ReactTasks from '../../components/react/tasks/Tasks'



let tasks =  []

try {
	const response = await fetch('http://localhost:3000/api/tasks/tasks.json')
	tasks = await response.json()
} catch (error) {
	console.log(error)
}



---

<Layout title="Lit React">
	<main class="main" slot="main">
		<h1>React Task List</h1>
        <ReactTasks 
            client:load 
            tasks={tasks}
        />
	</main>
</Layout>
<style>
	p{
		font-size: 1.2em;
	}
</style>

