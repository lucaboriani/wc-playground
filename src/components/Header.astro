---
import { getSession } from 'auth-astro/server';
import Navigation from '../components/Navigation.astro';
import Hamburger from '../components/Hamburger.astro';
import { SignIn, SignOut } from 'auth-astro/components'
const session = await getSession(Astro.request)

---
<header id="site-header" class="fixed w-full bg-black bg-opacity-50 z-10 top-0 flex justify-between">
    <nav>
        <Hamburger />
        <Navigation />
    </nav>
    <div class="flex flex-col items-end pr-4 justify-center">
        {session ? (
            <div class="flex">
                <SignOut class="mx-2">log out</SignOut>
                <img loading='lazy' src={session.user?.image} class="w-12"/>
            </div>
            
          ) : (
            <SignIn provider="github" class="text-red-300 hover:text-red-400">
                login
            </SignIn>
          )}
    </div>
</header>