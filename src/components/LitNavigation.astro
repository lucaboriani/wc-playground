---
import MFMenuLink from "./utility/MFMenuLink.astro"; 
const navigation = [
    {
        txt:'Lit',
        link:'/lit'
    },
    {
        txt:'Lit: Composing templates',
        link:'/lit/composing-templates'
    },
    {
        txt:'Use Lit in react',
        link:'/lit/lit-react'
    },
    {
        txt:'Use Lit in Vue',
        link:'/lit/lit-vue'
    },
]

---
<ul class="sticky top-20">
    {navigation.map((el) => (
        <MFMenuLink 
            txt={el.txt} 
            link={el.link}
        />
    ))}
    <slot></slot>
</ul>